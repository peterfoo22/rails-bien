<h1> <%= @review.title %> </h1>

<div class = "score">

  <p><%= @review.score  %></p>

</div>


<% if @review.ambiance %>
  <div class = "ambiance">
    <span>Ambiance:</span>  <%= @review.ambiance %>
  </div>
<% end %>

<div class = "body">

  <%= simple_format @review.body  %>

</div>

<div class="actions">
  <%= link_to "Edit this Review", edit_review_path(@review)  %>
  <%= link_to 'Delete this review', review_path(@review), method: :delete, data: {confirm: "Are you sure?"}  %>
</div>
