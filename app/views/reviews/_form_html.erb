<%= form_for @review do |f|  %>

<% if @review.errors.any? %>

  <div> class = "errors">
    <p> Title is no there</p>
    <p> Review has to be longer than 10 characters. </p>
  </div>

<% end %>

<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :body %>
  <%= f.text_area :body %>
</p>

<p>
  <%=f.label :score %>
  <%=f.text_field :score %>
</p>

<%= f.submit "Save Review"  %>

<% end %>
