<h3>Edit This Restaurant Review</h3>

<%= form_for @review do |f|  %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :restaurant %>
  <%= f.text_field :restaurant %>
</p>

<p>
  <%= f.label :body %>
  <%= f.text_area :body %>
</p>

<p>
  <%=f.label :score %>
  <%=f.text_field :score %>
</p>

<p>
  <%=f.label :ambiance %>
  <%=f.text_field :ambiance %>
</p>

<%= f.submit "Save Review"  %>

<% end %>
